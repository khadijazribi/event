{% extends 'back.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <h1>liste des evenements</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>DateDep</th>
                <th>DateRet</th>
                <th>Location</th>
                <th>Prix</th>
                <th>NbrPrt</th>
                <th>NbrPlace</th>
                <th>Image</th>
                
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.nom }}</td>
                <td>{{ event.dateDep ? event.dateDep|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.dateRet ? event.dateRet|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.location }}</td>
                <td>{{ event.prix }}</td>
                <td>{{ event.nbrPrt }}</td>
                <td>{{ event.nbrPlace }}</td>
                <td><img src="{{ asset('Upload/')}}{{ event.image }}" width="200"  /></td>
                
                <td>
                    <a href="{{ path('event_admin_show', {'id': event.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('event_edit', {'id': event.id}) }}" class="btn btn-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('event_new') }}">Create new</a>
{% endblock %}
