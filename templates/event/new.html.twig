{% extends 'back.html.twig' %}


{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Ajouter un événement</div>
                <div class="panel-body">
                    <div class="col-md-6">
                        {{ form_start(form, {'attr': {'id': 'form'}}) }}

                            <div class="form-group">
                                <label>Nom</label>
                                {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.nom) }}
                            </div>

                            <div class="form-group">
                                <label>Localisation</label>
                                {{ form_widget(form.location, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.location) }}
                            </div>
                        <div class="form-group">
                            <label>Nombre de Place</label>
                            {{ form_widget(form.nbrPlace, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.nbrPlace) }}
                        </div>
                        <div class="form-group">
                            <label>Nombre de Participant</label>
                            {{ form_widget(form.nbrPrt, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.nbrPrt) }}
                        </div>
                        <div class="form-group">
                            <label>Prix</label>
                            {{ form_widget(form.prix, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.prix) }}
                        </div>
                        <div class="form-group">
                            <label>Date Début</label>
                            {{ form_widget(form.dateDep, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.dateDep) }}
                        </div>
                        <div class="form-group">
                            <label>Date arrivé</label>
                            {{ form_widget(form.dateRet, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.dateRet) }}
                        </div>
                        <div class="form-group">
                                <label>Description</label>
                                {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.description) }}
                            </div>
                        <div class="form-group">
                            <label>Image de l'evenement</label>
                            {{ form_widget(form.file, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.file) }}
                        </div>
                        <input type="submit" value="Enregistrer" class="btn btn-success" formnovalidate />

                        {{ form_end(form) }}
                    </div>
                    <div class="col-md-6">
                </div>
            </div>
        </div><!-- /.col-->
    </div>
{% endblock %}
